#!/bin/bash
#PBS -j eo
#PBS -r n
#PBS -l nodes=1

module load XE2016.0.3.210

cd ${PBS_O_WORKDIR}
currdir=/scratch/$USER/$$tmp
mkdir -p $currdir
cp fort.9 $currdir/
cp input.loc $currdir/
cd $currdir
~usvyat/Crystal14_new/bin/Linux-ifort-i64-t/std/properties < input.loc > loc.out

cp fort.80 ${PBS_O_WORKDIR}/
cp loc.out ${PBS_O_WORKDIR}/
cd ${PBS_O_WORKDIR}
rm -r $currdir

